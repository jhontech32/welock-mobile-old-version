                    </RelativeLayout>

                    <!-- Pin Widget -->
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/privateAccountIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/round_back_notification"
                            android:padding="12dp"
                            android:src="@drawable/pin_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/privateAccountIcon"
                            android:text="Smart Lock"
                            android:textColor="@color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:backgroundTint="#198c19"
                            android:drawableLeft="@drawable/touch_icon"
                            android:text="TAP" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/permissionWidgetBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:backgroundTint="#cc0000"
                            android:drawableLeft="@drawable/permission_icon"
                            android:text="BLOCK" />

