                    </RelativeLayout>

                    <!-- System BottomBar -->
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/privateAccountIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/round_back_notification"
                            android:padding="12dp"
                            android:src="@drawable/task_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Open Navigation"
                            android:textColor="@color/white"
                            android:layout_toEndOf="@+id/privateAccountIcon"
                            android:layout_marginStart="20dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/stopTaskBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:backgroundTint="#198c19"
                            android:text="TAP"
                            android:drawableLeft="@drawable/touch_icon" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/permissionTaskBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:backgroundTint="#cc0000"
                            android:drawableLeft="@drawable/permission_icon"
                            android:text="BLOCK" />

                    </RelativeLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/round_back_white10_20">

                <!-- Screen Lock -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/developerIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_back_screen_code"
                        android:padding="12dp"
                        android:src="@drawable/locked_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/developerIcon"
                        android:text="Screen Code"
                        android:textColor="@color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/showScreenCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#198c19"
                        android:drawableLeft="@drawable/gear_icon"
                        android:text="SET" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/permissionScreenBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#cc0000"
                        android:drawableLeft="@drawable/permission_icon"
                        android:text="BLOCK" />

<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:src="@drawable/right_arrow_icon"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_centerVertical="true"/>-->

                </RelativeLayout>

                <!-- Factory Reset -->
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/versionIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_back_screen_code"
                        android:padding="12dp"
                        android:src="@drawable/reset_factory_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Factory Code"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/versionIcon"
                        android:layout_marginStart="20dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/showResetCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#198c19"
                        android:text="SET"
                        android:drawableLeft="@drawable/gear_icon" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/permissionResetBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="#cc0000"
                        android:drawableLeft="@drawable/permission_icon"
                        android:text="BLOCK" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/round_back_white10_20">

                <!-- Developer -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/developerIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_back_info"
                        android:padding="12dp"
                        android:src="@drawable/developer_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/developerIcon"
                        android:text="White Programmer"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <!-- Version -->
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/versionIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12dp"
                        android:src="@drawable/version_icon"
                        android:background="@drawable/round_back_info" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Version 1.0.0 - beta"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/versionIcon"
                        android:layout_marginStart="20dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
